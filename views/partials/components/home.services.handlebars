<section id="services" class="wow fadeInUp">
    <div class="container">
        <div class="gt_hdg_1 wow zoomIn">
            <h3> {{contents.home.services.title}} </h3>
            {{{contents.home.services.body}}}
            <span><img src="static/images/hdg-01.png" alt=""></span>
        </div>
        
        <div class="row">
            <div class="col-md-8">
                <div class="gt_course_tab_list default_width">
                    <ul id="filterable-item-filter-1">
                        {{!--<li><a class="active" data-value="All" href="#">Hepsi</a></li>--}}
                        {{#each servicecat}}
                        <li><a data-value="{{{id}}}" href="#">{{{title}}}</a></li>
                        {{/each}}
