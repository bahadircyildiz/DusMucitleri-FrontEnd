            {{!--            <label><input type="submit" value="Ara"></label>--}}
            {{!--        </form>--}}
            {{!--    </div>--}}
            {{!--</div>--}}
        </div>

        <!--Popular Courses List Wrap Start-->
        <div id="filterable-item-holder-1">
            {{#each services}}
            <div class="filterable-item All {{{categoryID}}} col-md-4 col-sm-6 col-xs-12">
                <div class="gt_latest_course2_wrap default_width">
                    <figure>
                        {{#if this.image}}<img src="{{this.image}}" alt="{{this.title}}">{{/if}}
                        <figcaption>
                            {{!--<div class="course_price">{{this.price}}&#8378;</div>--}}
                            {{#getRibbon this.categoryID}}
                            <div class="course_category courses_bg_{{{id}}}" >{{{title}}}</div> 
                            {{/getRibbon}}
                        </figcaption>
                    </figure>
                    <div class="gt_latest_course_des default_width">
                        <h5><a href="/service/details/{{{id}}}">{{{title}}}</a></h5>
                        <p> {{{body}}}... </p>
                        {{!--<div class="gt_latest_course_author">--}}
