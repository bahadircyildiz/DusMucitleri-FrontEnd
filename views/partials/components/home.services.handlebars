                        {{!--        <span>{{{title}}}</span>--}}
                        {{!--    </div>--}}
                        {{!--    {{/getInstructor}}--}}
                        {{!--</div>--}}
                        <div class="gt_course_apply">
                            {{!--<a data-toggle="modal" data-target="#apply_form" href="#">Başvur</a>--}}
                            <a href="/service/details/{{{id}}}">Başvur</a>
                        </div>
                    </div> 
                </div>
            </div>
            {{/each}}
        </div>

